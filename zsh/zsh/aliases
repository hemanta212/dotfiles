# opens lazygit in dir of symlink source, returns to curdir when closed
lzsym() {
  [ -z "$1" ] && echo "Usage: lzsym <filepath>" && return 1
  local orig_dir=$(dirname "$(realpath "$1")")
  local current_dir=$(pwd)
  cd "$orig_dir" && lazygit
  cd "$current_dir"
}

