latest_file() {
  local dir="${1:-$PWD}"
  find "$dir" -type f -exec stat -f "%m %N" {} + 2>/dev/null | sort -nr | head -1 | cut -d' ' -f2-
}

tails() {
  local dir="$HOME/.cache/scripts/${1:-}"
  echo "tail -f $(latest_file "$dir")"
  tail -f "$(latest_file "$dir")"
}

export METAREPO="$HOME/Coding/metarepo"

ampm() {
  local message="${1:-your default message here}"

  # Launch amp
  tmux send-keys "amp" Enter

  # Wait for amp to fully load
  sleep 5

  # Populate the input box (no Enter, so it stays editable)
  tmux send-keys "$message"
}
