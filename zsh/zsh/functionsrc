aenv () {
  if [ $# -eq 1 ]
    then
      source ~/.cache/pypoetry/virtualenvs/$1/bin/activate
  fi
  if [ $# -eq 0 ]
    then
      source $(poetry env info -p)/bin/activate
  fi
}

menv () {
      python -m venv ~/.cache/pypoetry/virtualenvs/$1;
}

neovim () {
    current=$PWD
    cd ~/$1;
    aenv;
    cd $current;
    echo $current;
    if [ $# -eq 1 ]
        then
           nvim; 
    fi
    if [ $# -eq 2 ]
        then
           nvim $2; 
    fi
}

upvrc() {
    cd ~;
    cp .vimrc ~/dev/dotfiles/vim/vim/;
    cd  ~/.vim/ ;
    cp init.vimrc general.vimrc python.vimrc plugin.vimrc graphics.vimrc key.vimrc ~/dev/dotfiles/vim/vim/;
    cd ~/dev/dotfiles/
    git add . && git commit -m "updated vim configs" 
    cd ;
}

upnvim() {
    cd ~/.config/nvim/;
    cp init.vim ~/dev/dotfiles/vim/neovim/;

    cd ~/dev/dotfiles/
    git add . && git commit -m "updated neovim configs"
    cd ;
}
dpvrc() {
    cd ~/dev/dotfiles/vim/vim/;
    cp .vimrc init.vimrc general.vimrc python.vimrc plugin.vimrc graphics.vimrc key.vimrc ~/.vim/;
    cd ;
}

dpnvim() {
    cd ~/dev/dotfiles/vim/neovim/;
    cp init.vim ~/.config/nvim/
    cd ;
}

sbash () {
      source ~/.zshrc
}

upbash () {
      cd ~
      cp -r .zshrc .config/zsh dev/dotfiles/zsh/      
      cp .tmux.conf dev/dotfiles
      cd dev/dotfiles/
      git add . && git commit -m "updated zsh dotfiles"
}

dpbash() {
        cd ~/dev/dotfiles/zsh/
        cp .zshrc ~/
        cp -r  zsh ~/.config/zsh/   
        cp config.py .pythonrc.py ~/.config/ptpython/
}

updotfiles () {
        cd ~/dev/dotfiles/
        git pull origin master
        git push origin master
}

clone() {
        cd
        git clone https://github.com/$1/$2
}
vrc (){
        vim ~/.vim/$1.vimrc
}
vbash (){
        vim ~/.bashrc
}
valias (){
        vim ~/.aliases
}

vprof (){
        vim ~/.bash_profile
}

vwake(){
    source bin/activate
}

flutcp (){
    cp -r ~/flutter_dev/$1/lib /mnt/f/my_projects/dart_dev/$1/
}

winpro (){
    cd /mnt/f/my_projects/$@
}

colab_con (){
    if [ $# -eq 1 ]
        then
           ssh -o UserKnownHostsFile=/dev/null -o ServerAliveInterval=60 -p $1 pykancha@0.tcp.ngrok.io
    fi
    if [ $# -eq 2 ]
        then
           ssh -o UserKnownHostsFile=/dev/null -o ServerAliveInterval=60 -p $1 pykancha@0.tcp.$2.ngrok.io
    fi
}

mystatus (){
    current=$PWD
    cd ~/dev/status
    git checkout gh-pages
    echo "<div class='main'>"
    echo "<div class='head'><h1>$1</h1></div>"

    if [ $# -eq 2 ]
        then
           echo "<div class='detail'><h3>$2</h3></div>"
    fi
    echo "</div>" 
    git commit -a -m 'Updates status'
    git push origin gh-pages
    cd $current
}
